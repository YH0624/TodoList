<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="3dp"
    tools:layout_editor_absoluteY="2dp">


    <ListView
        android:id="@+id/list"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edit_text_id"
        android:layout_width="61dp"
        android:layout_height="42dp"
        android:autofillHints="@string/hint_value"
        android:background="#fff"
        android:hint="@string/hint_value"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_memo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="526dp" />

    <EditText
        android:id="@+id/edit_text_memo"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:autofillHints="@string/hint_key"
        android:background="#fff"
        android:hint="@string/hint_key"
        android:inputType="text"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/button_insert"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edit_text_id"
        tools:ignore="MissingConstraints,SpUsage"
        tools:layout_editor_absoluteY="526dp" />

    <Button
        android:id="@+id/button_insert"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:text="@string/insert"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edit_text_memo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="528dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
